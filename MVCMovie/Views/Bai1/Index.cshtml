@{
    ViewData["Title"] = "Nhập thông tin";
}

<h2>Nhập họ tên và năm sinh</h2>

<form method="post">
    <label>Họ tên:</label>
    <input type="text" name="name" required />
    <br />

    <label>Năm sinh:</label>
    <input type="number" name="year" required />
    <br />

    <button type="submit">Hiển thị</button>
</form>

@if (ViewBag.Name != null)
{
    <h3>Kết quả:</h3>
    <p>Họ tên: @ViewBag.Name</p>
    <p>Tuổi: @ViewBag.Age</p>
}
